<EditForm Model="@User" OnValidSubmit="@OnSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <lablel>First Name:</lablel>
        <div>
            <InputText @bind-Value="@User.FirstName"/>
            <ValidationMessage For="@(() => User.FirstName)"/>
        </div>
    </div>

    <div class="form-group">
        <lablel>Middle Name:</lablel>
        <div>
            <InputText @bind-Value="@User.MiddleName"/>
            <ValidationMessage For="@(() => User.MiddleName)"/>
        </div>
    </div>

    <div class="form-group">
        <lablel>Last Name:</lablel>
        <div>
            <InputText @bind-Value="@User.LastName"/>
            <ValidationMessage For="@(() => User.LastName)"/>
        </div>
    </div>

    <div class="form-group">
        <lablel>Email:</lablel>
        <div>
            <InputText @bind-Value="@User.Email"/>
            <ValidationMessage For="@(() => User.Email)"/>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        @ButtonText
    </button>
</EditForm>

@code {

    [Parameter]
    public UserManagementPage.User User { get; set; }

    [Parameter]
    public string ButtonText { get; set; }

    [Parameter]
    public EventCallback OnSubmit { get; set; }

}